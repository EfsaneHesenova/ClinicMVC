@model ICollection<Doctor>;

<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Doctor" asp-action="Create">Create Doctor</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Image</th>
                        <th>buttons</th>
                    </tr>
                </thead>
                <tfoot>
                    @if (Model is not null)
                    {

                    
                    @foreach (Doctor item in @Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Name</th>
                            <th>@item.Surname</th>
                            <td><img src="~/img/@item.ImageUrl" width="50" /></td>>
                            <td><a class="btn btn-primary" asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a>
                            <a class="btn btn-danger" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
                        </tr>
                    }
                    }
                    else
                    {
                        <p>You Dont Have Doctors</p>
                    }
                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->